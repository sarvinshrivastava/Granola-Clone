{
  "name": "granola-clone-backend",
  "version": "1.0.0",
  "description": "Backend server for Granola Clone - Hindi speech-to-text transcription application with WebSocket support and SarvamAI integration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "security:audit": "npm audit",
    "security:check": "npm audit --audit-level moderate",
    "logs": "tail -f logs/app.log",
    "clean": "rm -rf logs/* temp/*",
    "health": "curl -s http://localhost:5000/health || echo 'Server not responding'"
  },
  "keywords": [
    "speech-to-text",
    "transcription",
    "hindi",
    "websocket",
    "sarvam-ai",
    "real-time",
    "audio-processing",
    "express",
    "nodejs"
  ],
  "author": {
    "name": "AI Assistant",
    "email": "ai@granola-clone.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/granola-clone-backend.git"
  },
  "homepage": "https://github.com/your-username/granola-clone-backend#readme",
  "bugs": {
    "url": "https://github.com/your-username/granola-clone-backend/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "type": "commonjs",
  "dependencies": {
    "body-parser": "^2.2.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "form-data": "^4.0.4",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "joi": "^18.0.1",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.3",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "eslint": "^9.36.0",
    "nodemon": "^3.1.10"
  }
}
